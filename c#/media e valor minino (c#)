using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

					
public class Program
{
	public static void Main()
	{
		double compra1, compra2, compra3, compra4 = 0;
		string frase = "Digite a {0}º nota: ";
		
		Console.WriteLine(frase, 1);
		compra1 = Convert.ToDouble( Console.ReadLine() );
		
		Console.WriteLine(frase, 2);
		compra2 = Convert.ToDouble( Console.ReadLine() );
		
		Console.WriteLine(frase, 3);
		compra3 = Convert.ToDouble( Console.ReadLine() );
		
		Console.WriteLine(frase, 4);
		compra4 = Convert.ToDouble( Console.ReadLine() );
		
		double total, media = 0;
		total = compra1 + compra2 + compra3 + compra4 ;
		media = total  / 4;
		Console.WriteLine("A média de compras foi de: " + media ); 
		
		if (total == 300 )
		{
			Console.WriteLine("Você ganhou um cupom!");
		}
		else
		{
			Console.WriteLine("Você ainda não está fidelizado");
		}		
	
	}
	
}
